@model IEnumerable<RestaurantConsumeWebAPI.Models.Food>

@{
    ViewData["Title"] = "Food Menu";
}

<h2 class="text-center mt-4">🍽️ Food Menu</h2>

<!-- Add New Food Item Button -->
<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Add New Food</a>
</div>

<!-- Search Bar -->
<div class="mb-3">
    <input type="text" id="searchBox" class="form-control" placeholder="🔍 Search food items..." onkeyup="searchTable()">
</div>

