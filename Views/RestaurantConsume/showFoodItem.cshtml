    <thead class="table-dark text-center">
        <tr>
            <th>Food Number</th>  <!-- Change this to your preferred name -->
            <th>Food Name</th>  <!-- Change this to your preferred name -->
            <th>Food Price</th>  <!-- Change this to your preferred name -->
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@Html.DisplayFor(modelItem => item.foodItemId)</td>
                <td>@Html.DisplayFor(modelItem => item.foodItemName)</td>
                <td class="text-center">₹@Html.DisplayFor(modelItem => item.foodPrice)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.foodItemId" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i> Edit</a>
                    <a asp-action="Details" asp-route-id="@item.foodItemId" class="btn btn-info btn-sm"><i class="fas fa-info-circle"></i> Details</a>
                    <a asp-action="Delete" asp-route-id="@item.foodItemId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this food item?');">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- JavaScript for Search Functionality -->
<script>
    function searchTable() {
        let input = document.getElementById("searchBox").value.toUpperCase();
        let table = document.querySelector("table");
        let rows = table.getElementsByTagName("tr");

        for (let i = 1; i < rows.length; i++) {
            let cells = rows[i].getElementsByTagName("td");
            let match = false;

            for (let j = 0; j < cells.length; j++) {
                if (cells[j]) {
                    let textValue = cells[j].textContent || cells[j].innerText;
                    if (textValue.toUpperCase().indexOf(input) > -1) {
                        match = true;
                        break;
                    }
                }
            }
            rows[i].style.display = match ? "" : "none";
        }
    }
</script>

